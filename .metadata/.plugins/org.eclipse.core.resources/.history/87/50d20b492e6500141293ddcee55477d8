import java.util.ArrayList;
import java.util.List;



public class RomanConverter {

	private String roman;
	private Integer num, romanInt = 0;
	private List<position> romanList = new ArrayList<position>();
	
	public RomanConverter(){
		roman = "";
		num = 0;
		romanInt = 0;
		}
	
	public RomanConverter(String theRoman, Integer theNumber){
		roman = theRoman;
		romanInt = theNumber;
	}
	
	public void RomanToDecimal(String theRoman){
		Integer num = 0;
		Integer length = theRoman.length()-1;

		for(int i = 0; i <= length; i++){
				switch (theRoman.charAt(i)){
				
				case 'I':
					num = 1;
				case 'V':
					num = 5;
				case 'X':
					num = 10;
				case 'L':
					num = 50;
				case 'C':
					num = 100;
				case 'D':
					num = 500;
				case 'M':
					num = 1000;
				}
				
				position position = new position(i, num);
				romanList.add(position);
		}

		for(int i = 0; i < romanList.size(); i++){
			if(romanList.get(i).getValue() >= romanList.get(i+1).getValue()){
				romanInt += romanList.get(i).getValue();
			}
			else{
				romanInt -= romanList.get(i).getValue();
			}
		}


	}
	
	public Integer getNumber(){
		return romanInt;
	}
}
