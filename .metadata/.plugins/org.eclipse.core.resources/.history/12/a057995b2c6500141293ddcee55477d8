		}
	public RomanConverter(String theRoman, Integer theNumber){
		roman = theRoman;
		num = theNumber;
	}
	public Integer RomanToDecimal(String theRoman){
		Integer num = 0;
		Integer length = theRoman.length()-1;

		for(int i = 0; i <= length; i++){
			if(i == length){
				switch (theRoman.charAt(i)){
				
				case 'I':
					num = 1;
				case 'V':
					num = 5;
				case 'X':
					num = 10;
				case 'L':
					num = 50;
				case 'C':
					num = 100;
				case 'D':
					num = 500;
				case 'M':
					num = 1000;
				}
				int position+i = num;
			}
		
			else{
				if(theRoman.charAt(i) == theRoman.charAt(i+1)){
					switch (theRoman.charAt(i)){
					
					case 'I':
						num += 1;
					case 'V':
						num += 5;
					case 'X':
						num += 10;
					case 'L':
						num += 50;
					case 'C':
						num += 100;
					case 'D':
						num += 500;
					case 'M':
						num += 1000;
					}

				}
				else if
					
			}
		}
		return num;

	}
}
