
public class VowelDetector {
	private Integer vowels = 0, index=0;
	
	public VowelDetector(){
		vowels = 0;
	}

	public Integer Detector(String word){
		if(word.length() == 0){
			return vowels;
			}
		
		else{
			if(word.charAt(index) == 'A' || word.charAt(index) == 'E' || word.charAt(index) == 'I' ||
					word.charAt(index) == 'O' || word.charAt(index) == 'U' || word.charAt(index) == 'Y'){
				vowels++;
				word = word.substring(index++,word.length()-1);
			}

			return Detector(word);
		}
		
	}
}
