import java.awt.HeadlessException;
import java.text.DateFormat;
import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.time.DayOfWeek;
import java.util.Calendar;
import java.util.Date;
import java.util.Locale;

import javax.swing.JOptionPane;


public class exercise6 {

	@SuppressWarnings("deprecation")
	public static void main(String[] args) throws HeadlessException, ParseException {
		Integer day, month, year;
		Integer dayB, monthB, yearB;
		Integer second, minute, hour;
		SimpleDateFormat formatter = new SimpleDateFormat("MMMM dd yyy" , Locale.US);

		//create and instantiate the Calendar class
		Calendar time = Calendar.getInstance();
		Calendar birthdate = Calendar.getInstance();
		
		
		//Date convertedDate = formatter.parse(JOptionPane.showInputDialog("What is your birthdate?"));	
		
		//ask the user for inut and convert to a calendar format
		birthdate.setTime(formatter.parse(JOptionPane.showInputDialog("What is your birthdate?")));
		

		
		//store birthday date values in separate integers
		dayB =  birthdate.get(Calendar.DAY_OF_YEAR);
		monthB = birthdate.get(Calendar.MONTH);
		yearB = birthdate.get(Calendar.YEAR);
		
		
		//store current time values in separate integers
		second = time.get(Calendar.SECOND);
		minute = time.get(Calendar.MINUTE);
		hour = time.get(Calendar.HOUR);
		
		//store current date values in separate integers
		day = time.get(Calendar.DAY_OF_YEAR);
		month = time.get(Calendar.MONTH);
		year = time.get(Calendar.YEAR);
		
		
		System.out.println(dayB);

	}

}
