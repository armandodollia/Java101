
public class palindromeHelper {

		String word;
		Integer number;
		static Boolean palindromeTest = true;
		
		
		public palindromeHelper(Integer number) {
			this.number = number;
		}
		
		public palindromeHelper(String word) {
			this.word = word;
			while(palindromeTest){
				for(int i = 0; i <= (word.length()-i-1)/2; i++){
						if(word.charAt(i) == word.charAt(word.length()-1-i)){
							palindromeTest = true;
						}
						else{
							palindromeTest = false;
						}
				}
			}
		}
		
		public static Boolean getTest(){
			return palindromeTest;
		}
}
